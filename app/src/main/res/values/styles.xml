<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton">
        <item name="bootstrapBrand">primary</item>
        <item name="bootstrapSize">lg</item>
        <item name="buttonMode">regular</item>
        <item name="showOutline">false</item>
        <item name="roundedCorners">true</item>
    </style>

    <style name="SmallSuccessButton">
        <item name="bootstrapBrand">success</item>
        <item name="bootstrapSize">sm</item>
        <item name="buttonMode">regular</item>
        <item name="showOutline">false</item>
        <item name="roundedCorners">true</item>
    </style>

    <style name="boxText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <style name="box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>



</resources>
